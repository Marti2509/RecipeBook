@model CategoryFormModel;

@{
    ViewBag.Title = "Delete Category";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="post" asp-controller="Category" asp-action="Delete">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group mt-2 offset-md-5">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>